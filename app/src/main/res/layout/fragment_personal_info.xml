<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ayesha.cs3040.CS3040_restaurantApp.profile.PersonalInfoFragment">


    <ImageView
        android:id="@+id/personal_info_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_black_24dp"
        android:tint="@color/colorPrimary"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        />

    <ImageView
        android:id="@+id/personal_info_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:tint="@color/colorPrimary"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/ic_launcher_round"
            />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Person Name"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/user_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Active Since 2018 "
            android:textSize="12dp"/>

        <TextView
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:background="#A9A9A9" />

        <TextView
            android:id="@+id/email_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="Email"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/email_info"
            android:paddingLeft="30dp"
            android:paddingVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example@gmail.com"
            android:textAllCaps="false"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />
        <View
            android:layout_height="1.5dp"
            android:layout_width="match_parent"
            android:background="#A9A9A9" />

        <TextView
            android:id="@+id/mobile_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="20dp"
            android:text="Mobile Number"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/mobile_info"
            android:paddingLeft="30dp"
            android:paddingVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="07744 986003"
            android:textAllCaps="false"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />
        <View
            android:layout_height="1.5dp"
            android:layout_width="match_parent"
            android:background="#A9A9A9" />

        <TextView
            android:id="@+id/language_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="20dp"
            android:text="Language"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/language_info"
            android:paddingLeft="30dp"
            android:paddingVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English"
            android:textAllCaps="false"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />
        <View
            android:layout_height="1.5dp"
            android:layout_width="match_parent"
            android:background="#A9A9A9" />

        <TextView
            android:id="@+id/location_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="20dp"
            android:text="Home Location"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/location_info"
            android:paddingLeft="30dp"
            android:paddingVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birmingham, UK"
            android:textAllCaps="false"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />
        <View
            android:layout_height="1.5dp"
            android:layout_width="match_parent"
            android:background="#A9A9A9" />

        <Button
            android:id="@+id/btn_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/log_out_string"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            />

    </LinearLayout>


</RelativeLayout>