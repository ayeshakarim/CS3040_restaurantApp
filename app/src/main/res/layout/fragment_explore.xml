<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ayesha.cs3040.CS3040_restaurantApp.explore.ExploreFragment"
    android:orientation="vertical"
    android:id="@+id/explore_container"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/explore_title"
        android:text="Visited Restaurants"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textSize="25dp"
        android:textStyle="bold"
        android:padding="15dp"/>

        <View
            android:layout_height="1.5dp"
            android:layout_width="match_parent"
            android:background="#f1f1f1" />
        <android.support.v7.widget.SearchView
            android:id="@+id/explore_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@android:color/background_dark"
            android:tooltipText="Search restaurant name or address"
            android:elevation="10dp">

        </android.support.v7.widget.SearchView>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/dropshadow" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/home_rv">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/colorAccent"
        android:clickable="true"
        android:src="@drawable/ic_location_on_black_24dp"
        android:tint="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:layout_anchorGravity="bottom|right|end" />



</RelativeLayout>