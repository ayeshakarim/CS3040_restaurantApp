<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/restaurant_search_item"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="5dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/search_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:progressTint="@color/colorPrimary"
                android:rating="4"
                android:stepSize="1" />
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingStart="20dp"
                android:text="Price: 2/4" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp">

        <Button
            android:id="@+id/search_book_btn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="book"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/search_item_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="22 Example Lane, Birmingham, B91 HYS" />


    <TextView
        android:id="@+id/search_item_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="www.example.com" />

    <!--<ImageView-->
    <!--android:id="@+id/item_image"-->
    <!--android:layout_width="150dp"-->
    <!--android:layout_height="100dp"-->
    <!--android:layout_margin="10dp"-->
    <!--android:background="@color/colorPrimary"/>-->

    </LinearLayout>
