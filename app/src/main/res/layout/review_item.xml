<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/review_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="15dp"
    android:layout_marginRight="10dp">

    <TextView
        android:id="@+id/review_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:layout_marginStart="5dp"/>


    <ImageView
        android:id="@+id/review_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:src="@drawable/ic_edit_black_24dp"
        android:tint="@color/colorAccent"
        android:textStyle="bold"
        android:paddingHorizontal="10dp"
        />

    <ImageView
        android:id="@+id/review_deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_black_24dp"
        android:tint="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"/>

    <RatingBar
        android:id="@+id/my_rating"
        android:layout_below="@+id/review_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:progressTint="@color/colorPrimary"
        android:rating="4"
        android:stepSize="1" />

    <TextView
        android:id="@+id/review_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_marginStart="10dp"
        android:text="20-04-2019, 10.00am"
        android:layout_below="@+id/my_rating"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/my_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="No comment"
        android:layout_below="@+id/review_date"
        />
</RelativeLayout>