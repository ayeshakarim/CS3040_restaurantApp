<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/permission_layout_internal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/explore_title"
            android:text="Explore"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="15dp"/>


        <Button
            android:id="@+id/explore_search_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:layout_margin="10dp"
            android:text="Click to Search"
            android:textColor="@android:color/white"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:onClick="initialClick"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Permission is Required to Use this App"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textAlignment="center"/>

    </LinearLayout>


</RelativeLayout>