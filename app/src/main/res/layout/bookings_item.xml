<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/bookings_parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


        <ImageView
            android:id="@+id/home_deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="@color/colorPrimary"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/item_date_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal"
            >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:tint="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/item_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_marginStart="10dp"
                    android:text="20-04-2019, 10.00am"
                    android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_address_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_date_container"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal"
            >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:tint="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/item_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="22 Example Lane, Birmingham, B91 HYS"
                    android:layout_below="@+id/booking_date_container"/>
        </LinearLayout>


        <Button
            android:id="@+id/book_btn"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="book"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60dp"
            />

    <!--<ImageView-->
            <!--android:id="@+id/item_image"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="100dp"-->
            <!--android:layout_margin="10dp"-->
            <!--android:background="@color/colorPrimary"/>-->

</RelativeLayout>